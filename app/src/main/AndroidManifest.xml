<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.korvin.guild" >


    <application
        android:name=".game.GameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".game.util.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme"></activity>
        <activity
            android:name=".game.ui.main.MainTabActivity"
            android:label="@string/title_activity_main_tab">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game.ui.event.statistics.StatisticsActivity"
            android:label="@string/title_activity_statistics"></activity>
        <activity
            android:name=".game.ui.event.story.StoryActivity"
            android:label="@string/title_activity_story"></activity>
    </application>
</manifest>
